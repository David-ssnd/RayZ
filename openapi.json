                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "game-modes"
        ],
        "summary": "Create game mode",
        "description": "Create a custom game mode",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GameModeInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Game mode created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameMode"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestError"
          }
        }
      }
    },
    "/game-modes/{gameModeId}": {
      "get": {
        "tags": [
          "game-modes"
        ],
        "summary": "Get game mode",
        "description": "Get game mode details",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameModeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Game mode details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameMode"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        }
      },
      "patch": {
        "tags": [
          "game-modes"
        ],
        "summary": "Update game mode",
        "description": "Update custom game mode (system modes are read-only)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameModeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GameModeInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Game mode updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameMode"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequestError"
          },
          "403": {
            "description": "Cannot modify system game mode",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "game-modes"
        ],
        "summary": "Delete game mode",
        "description": "Delete custom game mode",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "gameModeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Game mode deleted"
          },
          "403": {
            "description": "Cannot delete system game mode"
          }
        }
      }
    },
    "/projects/{projectId}/players": {
      "get": {
        "tags": [
          "players"
        ],
        "summary": "List players",

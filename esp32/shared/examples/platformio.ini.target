; Example platformio.ini for Target device
; Add these lines to your esp32/target/platformio.ini

[platformio]
; Reference the shared library directory
lib_extra_dirs = ../shared/lib

[env:esp32dev]
platform = espressif32
board = esp32dev
framework = arduino

; Include shared headers
build_flags = 
    -I../shared/include
    -DTARGET_DEVICE
    -DRAYZ_VERSION=\"${this.version}\"

; Optional: specify which shared library version
; lib_deps = 
;     https://github.com/David-ssnd/RayZ.git#shared/v1.0.0

monitor_speed = 115200
upload_speed = 921600

; Version tracking (update this for each release)
; version = 1.0.0

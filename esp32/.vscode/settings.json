{
  // Editor settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.rulers": [100],

  // C/C++ IntelliSense (Microsoft extension)
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.autocomplete": "default",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.default.cppStandard": "gnu++23",
  "C_Cpp.default.cStandard": "gnu17",
  "C_Cpp.codeAnalysis.clangTidy.enabled": false,
  "C_Cpp.enhancedColorization": "enabled",

  // PlatformIO settings
  "platformio-ide.useBuiltinPIOCore": true,
  "platformio-ide.autoRebuildAutocompleteIndex": true,
  "platformio-ide.disablePIOHomeStartup": false,

  // Formatting with clang-format
  "editor.defaultFormatter": "xaver.clang-format",
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "clang-format.style": "file",
  "clang-format.fallbackStyle": "LLVM",

  // File associations
  "files.associations": {
    "*.hpp": "cpp",
    "*.h": "cpp",
    "*.ino": "cpp"
  },
  "files.encoding": "utf8",

  // Code actions
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },

  // Theme
  "workbench.colorTheme": "Default Dark Modern"
}

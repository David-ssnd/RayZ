{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Monitor Target",
            "type": "shell",
            "command": "pio device monitor --port COM7",
            "options": {
                "cwd": "${workspaceFolder}/esp32/target"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false,
                "group": "monitors"
            }
        },
        {
            "label": "Monitor Weapon",
            "type": "shell",
            "command": "pio device monitor --port COM3",
            "options": {
                "cwd": "${workspaceFolder}/esp32/weapon"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false,
                "group": "monitors"
            }
        },
        {
            "label": "Monitor Both Devices",
            "dependsOn": [
                "Monitor Target",
                "Monitor Weapon"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": []
        }
    ]
}
